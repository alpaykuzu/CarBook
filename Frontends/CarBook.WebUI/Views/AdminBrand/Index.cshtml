@model List<ResultBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Marka Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Markalarla ilgili özellik ekleme, silme, güncelleme, arama ve listeleme gibi işlemleri bu sayfa üzerinden gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Marka</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                        <th>Araçlar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td><a href="/AdminBrand/RemoveBrand/@item.BrandID" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/AdminBrand/UpdateBrand/@item.BrandID" class="btn btn-outline-warning">Güncelle</a></td>
                                            <td><a href="/AdminBrand/UpdateBrand/@item.BrandID" class="btn btn-outline-secondary">Araçlar</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/AdminBrand/CreateBrand" class="btn btn-outline-primary">Yeni Marka Ekle</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


