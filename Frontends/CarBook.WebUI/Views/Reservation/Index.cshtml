@model CreateReservationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="col-md-12 block-9 mb-md-5">
    <form class="bg-light p-5 contact-form" method="post">

        <input type="hidden" class="form-control" readonly asp-for="CarID" value="@ViewBag.carID">

        <div class="form-group">
            <label>Adınız</label>
            <input type="text" class="form-control" asp-for="Name">
        </div>
        <div class="form-group">
            <label>Soyadınız</label>
            <input type="text" class="form-control" asp-for="Surname">
        </div>
        <div class="form-group">
            <label>E-Posta Adresiniz</label>
            <input type="email" class="form-control" asp-for="Email">
        </div>
        <div class="form-group">
            <label>Telefon Numaranız</label>
            <input type="text" class="form-control" asp-for="Phone">
        </div>
        <div class="form-group">
            <label>Yaşınız</label>
            <input type="number" class="form-control" asp-for="Age">
        </div>
        <div class="form-group">
            <label>Sürücü Deneyiminiz (Yıl)</label>
            <input type="number" class="form-control" asp-for="DriverLicenseYear">
        </div>
        <div class="form-group">
            <label>Alış Lokasyonu</label>
            @Html.DropDownListFor(x => x.PickUpLocationID, (List<SelectListItem>)ViewBag.locationValues, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>İade Lokasyonu</label>
            @Html.DropDownListFor(x => x.DropOffLocationID, (List<SelectListItem>)ViewBag.locationValues, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Eklemek İstedikleriniz (Varsa)</label>
            <textarea cols="30" rows="7" class="form-control" asp-for="Description"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
        </div>
    </form>

</div>
