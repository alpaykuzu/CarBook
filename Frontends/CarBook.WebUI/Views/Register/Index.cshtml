@model CreateRegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <title>CarBook - Yeni Hesap Oluştur</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="CarBook Araç Kiralama Sistemi Kayıt Sayfası" name="description" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <link rel="shortcut icon" href="~/Admin/vertical/assets/images/favicon.ico">

    <link href="~/Admin/vertical/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/vertical/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/vertical/assets/css/theme.min.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex align-items-center min-vh-100">
                        <div class="w-100 d-block bg-white shadow-lg rounded my-5">
                            <div class="row">
                                <div class="col-lg-5 d-none d-lg-block bg-register rounded-left"></div>
                                <div class="col-lg-7">
                                    <div class="p-5">
                                        <div class="text-center mb-5">
                                            <a href="/" class="text-dark font-size-22 font-family-secondary">
                                                <i class="mdi mdi-car-connected"></i> <b>CARBOOK</b>
                                            </a>
                                        </div>
                                        <h1 class="h5 mb-1">Hesabınızı Oluşturun!</h1>
                                        <p class="text-muted mb-4">Henüz bir hesabınız yok mu? Sadece bir dakikada kendi hesabınızı oluşturabilirsiniz.</p>

                                        <form class="user" method="post">
                                            <div class="form-group row">
                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                    <input type="text" class="form-control form-control-user" asp-for="Name" placeholder="Adınız">
                                                </div>
                                                <div class="col-sm-6">
                                                    <input type="text" class="form-control form-control-user" asp-for="Surname" placeholder="Soyadınız">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" class="form-control form-control-user" asp-for="Username" placeholder="Kullanıcı Adınız">
                                            </div>
                                            <div class="form-group">
                                                <input type="email" class="form-control form-control-user" asp-for="Email" placeholder="E-posta Adresiniz">
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-12">
                                                    <input type="password" class="form-control form-control-user" asp-for="Password" placeholder="Şifreniz">
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-success btn-block waves-effect waves-light"> Kayıt Ol </button>

                                            <div class="text-center mt-4">
                                                <h5 class="text-muted font-size-16">Sosyal medya ile bağlan</h5>
                                                <ul class="list-inline mt-3 mb-0">
                                                    <li class="list-inline-item">
                                                        <a href="javascript: void(0);" class="social-list-item border-primary text-primary"><i class="mdi mdi-facebook"></i></a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a href="javascript: void(0);" class="social-list-item border-danger text-danger"><i class="mdi mdi-google"></i></a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a href="javascript: void(0);" class="social-list-item border-info text-info"><i class="mdi mdi-twitter"></i></a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </form>

                                        <div class="row mt-4">
                                            <div class="col-12 text-center">
                                                <p class="text-muted mb-0">Zaten bir hesabınız var mı? <a href="/Login/Index/" class="text-muted font-weight-medium ml-1"><b>Giriş Yapın</b></a></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Admin/vertical/assets/js/jquery.min.js"></script>
    <script src="~/Admin/vertical/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/vertical/assets/js/metismenu.min.js"></script>
    <script src="~/Admin/vertical/assets/js/waves.js"></script>
    <script src="~/Admin/vertical/assets/js/simplebar.min.js"></script>
    <script src="~/Admin/vertical/assets/js/theme.js"></script>
</body>
</html>