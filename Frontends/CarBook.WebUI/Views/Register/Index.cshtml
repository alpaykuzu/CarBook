@model CreateRegisterDto
@{
    ViewData["Title"] = "Yeni Hesap Oluştur";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<style>
    .register-wrapper {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 95vh;
        padding: 60px 0;
        background-color: #fff;
    }

    .register-container {
        max-width: 100% !important;
        padding: 0 !important;
        width: 100%;
    }

    .register-card {
        border: none !important;
        background: #fff;
        border-radius: 0 !important;
        margin: 0 !important;
        box-shadow: 0 15px 40px rgba(0,0,0,0.1) !important;
    }

    .bg-register-custom {
        background-image: url('https://images.unsplash.com/photo-1449965408869-eaa3f722e40d?auto=format&fit=crop&q=80&w=1500');
        background-size: cover;
        background-position: center;
        position: relative;
        min-height: 650px;
    }

        .bg-register-custom::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.35);
        }

    .form-control-user {
        padding: 1.5rem 1rem;
        border: 1px solid #e9ecef;
        background-color: #f8f9fa;
        border-radius: 0 !important;
        font-size: 0.9rem;
    }

        .form-control-user:focus {
            border-color: #1089ff;
            box-shadow: none;
            background-color: #fff;
        }

    .btn-register {
        padding: 15px;
        font-weight: 600;
        background-color: #1089ff;
        border: none;
        color: #fff;
        border-radius: 0 !important;
        transition: all 0.3s;
        width: 100%;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .btn-register:hover {
            background-color: #007bff;
        }

    .ftco-footer {
        margin-top: auto;
    }
</style>

<div class="register-wrapper">
    <div class="container-fluid register-container">
        <div class="row no-gutters justify-content-center">
            <div class="col-xl-10 col-12">
                <div class="card register-card">
                    <div class="card-body p-0">
                        <div class="row no-gutters">
                            <div class="col-lg-5 d-none d-lg-block bg-register-custom">
                                <div class="h-100 d-flex flex-column justify-content-center align-items-center position-relative text-white p-5 text-center">
                                    <h2 class="display-4 font-weight-bold mb-3 text-white" style="text-shadow: 2px 2px 10px rgba(0,0,0,0.5);">Katılın</h2>
                                    <p class="lead text-white" style="font-weight: 500; text-shadow: 1px 1px 5px rgba(0,0,0,0.5);">Kendi rotanızı çizmek için ilk adımı atın.</p>
                                </div>
                            </div>

                            <div class="col-lg-7 d-flex align-items-center bg-white">
                                <div class="p-4 p-md-5 w-100">
                                    <div class="text-center mb-5">
                                        <a href="/" class="text-dark font-size-28 font-weight-bold text-uppercase" style="letter-spacing: 2px;">
                                            <span class="text-primary">Car</span>Book
                                        </a>
                                    </div>

                                    <h1 class="h3 mb-2 text-center font-weight-bold">Hesabınızı Oluşturun</h1>
                                    <p class="text-muted mb-5 text-center">Üye olun ve size özel ayrıcalıklı sürüş deneyimine başlayın.</p>

                                    <form method="post">
                                        <div class="form-group row">
                                            <div class="col-sm-6 mb-4 mb-sm-0">
                                                <label class="small font-weight-bold text-uppercase" asp-for="Name">Adınız</label>
                                                <input type="text" class="form-control form-control-user" asp-for="Name" placeholder="Örn: Ahmet" required>
                                            </div>
                                            <div class="col-sm-6">
                                                <label class="small font-weight-bold text-uppercase" asp-for="Surname">Soyadınız</label>
                                                <input type="text" class="form-control form-control-user" asp-for="Surname" placeholder="Örn: Yılmaz" required>
                                            </div>
                                        </div>
                                        <div class="form-group mb-4">
                                            <label class="small font-weight-bold text-uppercase" asp-for="Username">Kullanıcı Adı</label>
                                            <input type="text" class="form-control form-control-user" asp-for="Username" placeholder="Kullanıcı adınızı belirleyin" required>
                                        </div>
                                        <div class="form-group mb-4">
                                            <label class="small font-weight-bold text-uppercase" asp-for="Email">E-posta</label>
                                            <input type="email" class="form-control form-control-user" asp-for="Email" placeholder="e-posta@adresiniz.com" required>
                                        </div>
                                        <div class="form-group mb-5">
                                            <label class="small font-weight-bold text-uppercase" asp-for="Password">Şifre</label>
                                            <input type="password" class="form-control form-control-user" asp-for="Password" placeholder="••••••••" required>
                                        </div>

                                        <button type="submit" class="btn btn-register shadow-sm">
                                            Kayıt Ol
                                        </button>
                                    </form>

                                    <div class="row mt-5">
                                        <div class="col-12 text-center">
                                            <p class="text-muted mb-0">Zaten hesabınız var mı? <a href="/Login/Index/" class="text-primary font-weight-bold ml-1">Giriş Yap</a></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>