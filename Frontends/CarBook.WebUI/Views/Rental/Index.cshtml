@model List<CarBook.Dto.RentalDtos.ResultRentalDto>
@{
    ViewData["Title"] = "Kiralamalarım";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 text-center heading-section ftco-animate">
                <span class="subheading">Hesabım</span>
                <h2 class="mb-3">Kiralama Geçmişim</h2>
                <p>Onaylanmış ve tamamlanmış tüm araç kiralama işlemlerinizi aşağıdan takip edebilirsiniz.</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                @if (Model != null && Model.Count > 0)
                {
                    <div class="table-responsive bg-white p-4 shadow-sm rounded">
                        <table class="table table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Araç Bilgisi</th>
                                    <th>Alış Bilgileri</th>
                                    <th>İade Bilgileri</th>
                                    <th>Toplam Tutar</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="text">
                                                    <h6 class="mb-0"><strong>@item.Brand @item.Model</strong></h6>
                                                    <small class="text-muted">Kiralama ID: #@item.RentalID</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="small">
                                                <strong>Konum:</strong> @item.PickUpLocationName<br />
                                                <strong>Tarih:</strong> @item.PickUpDate.ToString("dd.MM.yyyy")<br />
                                                <strong>Saat:</strong> @item.PickUpTime
                                            </div>
                                        </td>
                                        <td>
                                            <div class="small">
                                                <strong>Konum:</strong> @item.DropOffLocationName<br />
                                                <strong>Tarih:</strong> @item.DropOffDate.ToString("dd.MM.yyyy")<br />
                                                <strong>Saat:</strong> @item.DropOffTime
                                            </div>
                                        </td>
                                        <td>
                                            <span class="text-primary font-weight-bold" style="font-size: 18px;">
                                                ₺@item.TotalPrice.ToString("N2")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge badge-success p-2">Onaylandı / Aktif</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info text-center p-5">
                        <i class="icon-info-circle mb-3" style="font-size: 40px; display: block;"></i>
                        <h5>Henüz onaylanmış bir kiralama işleminiz bulunmuyor.</h5>
                        <p>Hemen araç listemize göz atarak ilk rezervasyonunuzu yapabilirsiniz.</p>
                        <a href="/Car/Index" class="btn btn-primary mt-3">Araçları Listele</a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>