@model List<ResultCarFeatureDto>

<div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
    <div class="row">
        @{
            int totalItems = Model.Count;
            int itemsPerCol = (int)Math.Ceiling(totalItems / 3.0);
        }

        @for (int i = 0; i < 3; i++)
        {
            <div class="col-md-4">
                <ul class="features">
                    @foreach (var item in Model.Skip(i * itemsPerCol).Take(itemsPerCol))
                    {
                        if (item.Available)
                        {
                            <li class="check">
                                <span class="ion-ios-checkmark"></span>@item.Name
                            </li>
                        }
                        else
                        {
                            <li class="remove">
                                <span class="ion-ios-close"></span>@item.Name
                            </li>
                        }
                    }
                </ul>
            </div>
        }
    </div>
</div>