@model List<ResultBannerDto>

@foreach (var item in Model)
{
    <div class="hero-wrap ftco-degree-bg" style="background-image: url('https://images.pexels.com/photos/164634/pexels-photo-164634.jpeg'); background-position: center center !important;" data-stellar-background-ratio="0.5">

        <div class="overlay" style="background: linear-gradient(to bottom, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.7) 50%, rgba(0,0,0,0.4) 100%); opacity: 0.8;"></div>

        <div class="container">
            <div class="row no-gutters slider-text justify-content-start align-items-center justify-content-center">
                <div class="col-lg-8 ftco-animate">
                    <div class="text w-100 text-center mb-md-5 pb-md-5">

                        <h1 class="mb-4" style="font-weight: 800; text-shadow: 2px 4px 10px rgba(0,0,0,0.6);">
                            @item.Title
                        </h1>

                        <p style="font-size: 18px; font-weight: 400; text-shadow: 1px 2px 5px rgba(0,0,0,0.5); color: rgba(255,255,255,0.95);">
                            @item.Description
                        </p>

                        <a href="@item.VideoUrl" class="icon-wrap popup-vimeo d-flex align-items-center mt-4 justify-content-center">
                            <div class="icon d-flex align-items-center justify-content-center" style="box-shadow: 0px 0px 20px rgba(255,255,255,0.2);">
                                <span class="ion-ios-play"></span>
                            </div>
                            <div class="heading-title ml-5">
                                <span style="font-weight: 500; text-shadow: 1px 1px 3px rgba(0,0,0,0.5);">@item.VideoDescription</span>
                            </div>
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>
}