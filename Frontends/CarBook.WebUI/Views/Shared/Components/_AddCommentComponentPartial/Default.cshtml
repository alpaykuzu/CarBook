@model CreateCommentDto
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Mesaj bırak</h3>
    <form asp-controller="BlogDetail" asp-action="AddComment"
          method="post" class="p-5 bg-light">

        <input type="hidden" value="@ViewBag.blogId" name="BlogID" />

        <div class="form-group">
            <label for="name">Adınız Soyadınız *</label>
            <input type="text" class="form-control" id="name" name="Name">
        </div>

        <div class="form-group">
            <label for="email">Email *</label>
            <input type="email" class="form-control" id="email" name="Email">
        </div>

        <div class="form-group">
            <label for="message">Mesaj</label>
            <textarea name="Content" id="message" cols="30" rows="10" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <input type="submit" value="Gönder" class="btn py-3 px-4 btn-primary">
        </div>

    </form>
</div>
