@model CarBook.Dto.BlogDtos.CreateBlogDto
@{
    ViewData["Title"] = "Yeni Blog Oluştur";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<style>
    .create-blog-card {
        border: none;
        box-shadow: 0 0 25px rgba(0,0,0,0.08);
        border-radius: 15px;
        margin-top: 40px;
        margin-bottom: 60px;
    }

    .form-label {
        font-weight: 700;
        color: #343a40;
        margin-bottom: 8px;
        text-transform: uppercase;
        font-size: 12px;
        letter-spacing: 0.5px;
    }

    .form-control {
        border-radius: 8px;
        padding: 12px 15px;
        border: 1px solid #dee2e6;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #1089ff;
            box-shadow: 0 0 0 0.2rem rgba(16, 137, 255, 0.1);
        }

    .btn-save {
        background-color: #1089ff;
        border: none;
        padding: 12px 40px;
        border-radius: 8px;
        font-weight: 600;
        letter-spacing: 1px;
        transition: all 0.3s;
    }

        .btn-save:hover {
            background-color: #007bff;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(16, 137, 255, 0.2);
        }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card create-blog-card">
                <div class="card-body p-5">
                    <div class="text-center mb-5">
                        <h2 style="font-weight: 800; color: #1a1a1a;">Yeni Bir Hikaye Paylaş</h2>
                        <p class="text-muted">Düşüncelerinizi, incelemelerinizi ve otomobil dünyasındaki gelişmeleri takipçilerinizle buluşturun.</p>
                    </div>

                    <form method="post">
                        <input type="hidden" asp-for="AuthorID" value="@ViewBag.AuthorID" />

                        <div class="row">
                            <div class="col-md-8 mb-4">
                                <label class="form-label" asp-for="Title">Blog Başlığı</label>
                                <input type="text" class="form-control" asp-for="Title" placeholder="Dikkat çekici bir başlık giriniz..." required>
                            </div>

                            <div class="col-md-4 mb-4">
                                <label class="form-label">Kategori</label>
                                @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.categoryValues, "Kategori Seçiniz", new { @class = "form-control", @required = "required" })
                            </div>

                            <div class="col-md-12 mb-4">
                                <label class="form-label" asp-for="CoverImageUrl">Kapak Görseli (URL)</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-light"><i class="ion-ios-image"></i></span>
                                    </div>
                                    <input type="text" class="form-control" asp-for="CoverImageUrl" placeholder="https://resim-adresi.com/gorsel.jpg" required>
                                </div>
                                <small class="text-muted mt-1 d-block">Blog listesinde görünecek ana görsel.</small>
                            </div>

                            <div class="col-md-12 mb-4">
                                <label class="form-label" asp-for="Description">Blog İçeriği</label>
                                <textarea class="form-control" asp-for="Description" rows="12" placeholder="Hikayenizi buraya yazmaya başlayın..." required></textarea>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label">Yayın Tarihi</label>
                                <input type="date" class="form-control" asp-for="CreatedDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" required>
                            </div>

                            <div class="col-md-12 text-right mt-4">
                                <a href="/AuthorBlog/Index" class="btn btn-link text-muted mr-3" style="text-decoration: none;">Vazgeç</a>
                                <button type="submit" class="btn btn-primary btn-save shadow-sm">
                                    <i class="ion-ios-paper-plane mr-2"></i> Bloğu Yayınla
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>