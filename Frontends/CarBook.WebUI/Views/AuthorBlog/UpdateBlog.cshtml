@model CarBook.Dto.BlogDtos.UpdateBlogDto
@{
    ViewData["Title"] = "Blog Yazısını Güncelle";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<style>
    .update-blog-card {
        border: none;
        box-shadow: 0 0 25px rgba(0,0,0,0.08);
        border-radius: 15px;
        margin-top: 40px;
        margin-bottom: 60px;
    }

    .form-label {
        font-weight: 700;
        color: #343a40;
        margin-bottom: 8px;
        text-transform: uppercase;
        font-size: 12px;
        letter-spacing: 0.5px;
    }

    .form-control {
        border-radius: 8px;
        padding: 12px 15px;
        border: 1px solid #dee2e6;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #1089ff;
            box-shadow: 0 0 0 0.2rem rgba(16, 137, 255, 0.1);
        }

    .btn-update {
        background-color: #ffc107;
        border: none;
        padding: 12px 40px;
        border-radius: 8px;
        font-weight: 600;
        color: #000;
        letter-spacing: 1px;
        transition: all 0.3s;
    }

        .btn-update:hover {
            background-color: #e0a800;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(224, 168, 0, 0.2);
        }

    .current-img-preview {
        width: 100%;
        max-height: 200px;
        object-fit: cover;
        border-radius: 8px;
        margin-top: 10px;
        border: 1px solid #ddd;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card update-blog-card">
                <div class="card-body p-5">
                    <div class="text-center mb-5">
                        <h2 style="font-weight: 800; color: #1a1a1a;">İçeriği Düzenle</h2>
                        <p class="text-muted">Yayınladığınız "@Model.Title" başlıklı yazınızı buradan güncelleyebilirsiniz.</p>
                    </div>

                    <form method="post">
                        @* Kritik ID'ler gizli alan olarak tutulur *@
                        <input type="hidden" asp-for="BlogID" />
                        <input type="hidden" asp-for="AuthorID" />
                        <input type="hidden" asp-for="CreatedDate" />

                        <div class="row">
                            <div class="col-md-8 mb-4">
                                <label class="form-label" asp-for="Title">Blog Başlığı</label>
                                <input type="text" class="form-control" asp-for="Title" placeholder="Başlığı güncelleyin..." required>
                            </div>

                            <div class="col-md-4 mb-4">
                                <label class="form-label">Kategori</label>
                                @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.categoryValues, new { @class = "form-control", @required = "required" })
                            </div>

                            <div class="col-md-12 mb-4">
                                <label class="form-label" asp-for="CoverImageUrl">Kapak Görseli (URL)</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-light"><i class="ion-ios-image"></i></span>
                                    </div>
                                    <input type="text" class="form-control" asp-for="CoverImageUrl" id="imageUrlInput" placeholder="Yeni resim URL'si girin...">
                                </div>
                                @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                                {
                                    <img src="@Model.CoverImageUrl" class="current-img-preview" id="imgPreview" alt="Mevcut Görsel">
                                }
                            </div>

                            <div class="col-md-12 mb-4">
                                <label class="form-label" asp-for="Description">Blog İçeriği</label>
                                <textarea class="form-control" asp-for="Description" rows="15" placeholder="İçeriği düzenleyin..." required></textarea>
                            </div>

                            <div class="col-md-12 mb-4">
                                <div class="alert alert-info py-2" style="font-size: 13px; border-radius: 8px;">
                                    <i class="ion-ios-information-circle mr-2"></i>
                                    Bu yazı ilk olarak <strong>@Model.CreatedDate.ToString("dd MMMM yyyy")</strong> tarihinde yayınlanmıştır.
                                </div>
                            </div>

                            <div class="col-md-12 text-right mt-2">
                                <a href="/AuthorBlog/Index" class="btn btn-link text-muted mr-3" style="text-decoration: none;">Değişiklikleri İptal Et</a>
                                <button type="submit" class="btn btn-warning btn-update shadow-sm">
                                    <i class="ion-ios-checkmark-circle mr-2"></i> Güncellemeleri Kaydet
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    // Görsel URL değiştiğinde önizlemeyi anlık güncelle
    document.getElementById('imageUrlInput').addEventListener('input', function() {
        const preview = document.getElementById('imgPreview');
        preview.src = this.value;
    });
</script>
