@model ResultLocationDto
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<style>
    #drop option{
        color: black;
    }
</style>

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_HeadUILayoutComponentPartial")

<body>

    @await Component.InvokeAsync("_NavbarUILayoutComponentPartial")
    
    @await Component.InvokeAsync("_DefaultCoverUILayoutComponentPartial")

    <section class="ftco-section ftco-no-pt bg-light">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-md-12 featured-top">
                    <div class="row no-gutters">
                        <div class="col-md-4 d-flex align-items-center">
                            <form method="post" class="request-form ftco-animate bg-primary">
                                <h2>Şimdi Aracınızı Kiralayınız</h2>

                                <div class="form-group">
                                    <label class="label">Nereden Alacaksınız?</label>
                                    @Html.DropDownListFor(x => x.LocationID, (List<SelectListItem>)ViewBag.locationValues,
                                    new { @class = "form-control custom-input-style", @id = "location_select" })
                                </div>

                                <div class="d-flex">
                                    <div class="form-group mr-2">
                                        <label class="label">Alış Tarihi</label>
                                        <input type="date" class="form-control custom-input-style" name="book_pick_date" required>
                                    </div>
                                    <div class="form-group ml-2">
                                        <label class="label">İade Tarihi</label>
                                        <input type="date" class="form-control custom-input-style" name="book_off_date" required>
                                    </div>
                                </div>

                                <div class="d-flex">
                                    <div class="form-group mr-2">
                                        <label class="label">Alış Saati</label>
                                        <input type="time" class="form-control custom-input-style" name="time_pick" required>
                                    </div>
                                    <div class="form-group ml-2">
                                        <label class="label">İade Saati</label>
                                        <input type="time" class="form-control custom-input-style" name="time_off" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Uygun Araçları Listele" class="btn btn-secondary py-3 px-4 w-100">
                                </div>
                            </form>
                        </div>

                        <div class="col-md-8 d-flex align-items-center">
                            <div class="services-wrap rounded-right w-100">
                                <h3 class="heading-section mb-4">Araç Kiralamanın En Basit Yolu</h3>
                                <div class="row d-flex mb-4">
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center">
                                                <span class="flaticon-route"></span>
                                            </div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Almak İstediğin Konumu Seç</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center">
                                                <span class="flaticon-handshake"></span>
                                            </div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">En Uygun Araçları Gör</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center">
                                                <span class="flaticon-rent"></span>
                                            </div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Kiralamayı Tamamla!</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <p><a href="/Car/Index" class="btn btn-primary py-3 px-4">Tüm Filomuzu İnceleyin</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <style>
        /* 1. Form elemanlarının içini beyaz, yazısını siyah yaparak template'in beyaz yazı zorlamasını eziyoruz */
        .custom-input-style {
            background-color: white !important;
            color: #333 !important; /* Yazı rengini koyu yap */
            display: block !important;
            visibility: visible !important;
            opacity: 1 !important;
            height: 50px !important; /* Standart yükseklik */
            border: 1px solid #ced4da !important;
        }

            /* 2. Lokasyon listesi açıldığında içindeki yazıların görünür olmasını sağla */
            .custom-input-style option {
                background-color: white !important;
                color: #333 !important;
            }

            /* 3. Focus (tıklama) anında yazıların beyaz olmasını engelle */
            .custom-input-style:focus {
                color: #000 !important;
                background-color: white !important;
            }

        /* 4. Tarih ve Saat seçici ikonlarını (takvim/saat) görünür yap */
        input[type="date"]::-webkit-calendar-picker-indicator,
        input[type="time"]::-webkit-calendar-picker-indicator {
            filter: invert(0); /* Arka plan beyaz olduğu için ikonlar siyah kalmalı */
            cursor: pointer;
        }

        /* 5. Placeholder (varsayılan metin) rengini ayarla */
        .custom-input-style::placeholder {
            color: #999 !important;
        }
    </style>


    @await Component.InvokeAsync("_DefaultLastCarsWithBrandsComponentPartial")

    @await Component.InvokeAsync("_AboutUsComponentPartial")

    @await Component.InvokeAsync("_ServiceComponentPartial")

@*     @await Component.InvokeAsync("_BecomeADriverComponentPartial") *@

    @await Component.InvokeAsync("_TestimonialComponentPartial")

    @await Component.InvokeAsync("_GetLastBlogsWithAuthorsComponentPartial")

    @await Component.InvokeAsync("_DefaultStatisticsComponentPartial")

    @await Component.InvokeAsync("_FooterUILayoutComponentPartial")

    @await Component.InvokeAsync("_ScriptUILayoutComponentPartial")

</body>
</html>

