@model CreateCarFeatureDto
@{
    ViewData["Title"] = "CreateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Araç Girişi</h4>
                        <p class="card-subtitle mb-4">Araç özellikleri ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputBrand">Eklemek istediğiniz özelliği seçiniz.</label>
                                @Html.DropDownListFor(x => x.FeatureID, (List<SelectListItem>)ViewBag.featureValues, new { @class = "form-control" })
                            </div>
                            <input type="hidden" class="form-control" id="exampleInputModel" asp-for="CarID" value="@ViewBag.carID">
                            <input type="hidden" class="form-control" id="exampleInputModel" asp-for="Available" value="@ViewBag.available">

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



