@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Hakkımda Alanı Girişi</h4>
                        <p class="card-subtitle mb-4">Hakkımda bölümü ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputModel" placeholder="Başlığı Giriniz" asp-for="title">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputModel" placeholder="Açıklama Giriniz" asp-for="description">
                            </div>    <div class="form-group">
                                <label for="exampleInputImageUrl">Resim Url</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" placeholder="Resim Linkini Giriniz" asp-for="imageUrl">

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

