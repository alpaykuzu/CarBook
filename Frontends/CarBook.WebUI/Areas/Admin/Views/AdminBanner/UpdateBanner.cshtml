@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Banner Alanı Güncelleme</h4>
                        <p class="card-subtitle mb-4">Banner ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri düzenlemerinden sonra kaydet butonuna tıklayarak güncelleme işlemi tamamlayabilirsiniz.</p>

                        <form method="post">

                            <input type="hidden" asp-for="BannerID" />

                            < <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputModel" placeholder="Başlığı Giriniz" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputModel" placeholder="Açıklama Giriniz" asp-for="Description">
                            </div>    <div class="form-group">
                                <label for="exampleInputVideoDescription">Video Açıklaması</label>
                                <input type="text" class="form-control" id="exampleInputVideoDescription" placeholder="Video Açıklaması Giriniz" asp-for="VideoDescription">
                            </div>    <div class="form-group">
                                <label for="exampleInputVideoUrl">Özellik</label>
                                <input type="text" class="form-control" id="exampleInputVideoUrl" placeholder="Video Linki Giriniz" asp-for="VideoUrl">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



