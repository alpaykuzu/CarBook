@model List<ResultCommentDto>
@{
    ViewData["Title"] = "CommentListByBlog";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yorum Listesi - BlogID: @ViewBag.Id</h4>
                        <p class="card-subtitle mb-4">
                            Blog'a yapılmış yorumlar ile ilgili yayından kaldırma ve listeleme gibi işlemleri bu sayfa üzerinden gerçekleştirebilirsiniz.
                        </p>
                        @foreach (var item in Model)
                        {
                            count++;
                            <div class="col-md-12">
                                <div class="card">
                                    <h5 class="card-header">Yorum - @count</h5>
                                    <div class="card-body">
                                        <h4 class="card-title">@item.Name</h4>
                                        <p class="card-text">
                                            @item.Content
                                        </p>
                                        <a href="#" class="btn btn-danger waves-effect waves-light">Kaldır</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
