@model UpdateAuthorDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yazar Güncelleme</h4>
                        <p class="card-subtitle mb-4">Yazar ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>

                        <form method="post">
                            <input type="hidden" asp-for="AuthorID" />
                            <div class="form-group">
                                <label for="exampleInputName">Yazar Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" placeholder="Başlığı Giriniz" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImage">Yazar Resmi</label>
                                <input type="text" class="form-control" id="exampleInputImage" placeholder="Yazar Resmi Linki Giriniz" asp-for="ImageUrl">
                            </div>    <div class="form-group">
                                <label for="exampleInputDescription">Video Açıklaması</label>
                                <input type="text" class="form-control" id="exampleInputDescription" placeholder="Yazar Açıklaması Giriniz" asp-for="Description">

                                <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

